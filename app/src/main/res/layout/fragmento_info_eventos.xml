<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgEvento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/eventos_test" />

            <TextView
                android:id="@+id/txtNombreEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrera 5km con causa"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ping" />

                <TextView
                    android:id="@+id/txtUbicacionEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Querétaro"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDescripcionEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El evento consta de una carrera de 5km que recorrerá la ciudad de Querétaro desde Antea hasta la entrada a la fundación Ruiz Obregon. Los fondos recaudados de este evento irán a los niños palestinos. Israel no es un estado legitmo"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />


            <LinearLayout
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/calendario" />

                <TextView
                    android:id="@+id/txtFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Fecha: " />

                <TextView
                    android:id="@+id/txtFechaEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="10 Marzo - 10 de Marzo"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtCapacidadEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacidad: 200 personas"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/txtCostoEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costos: $0.0"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnInscribirme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/nav_bar"
                android:text="Inscribirme"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
