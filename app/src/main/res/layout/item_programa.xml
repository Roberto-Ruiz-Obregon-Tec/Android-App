<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivPrograma"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvCardTituloPrograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPrograma"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Titulo"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCardDescripcionPrograma"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCardTituloPrograma"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Descripcion"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCardCalendarioPrograma"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCardDescripcionPrograma"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:drawableStart="@drawable/calendario_24"
            android:drawablePadding="4dp"
            android:text="fecha" />

        <TextView
            android:id="@+id/tvCardCategoryPrograma"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCardCalendarioPrograma"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/category_24"
            android:drawablePadding="4dp"
            android:text="Beca" />


        <Button
            android:id="@+id/btnCardDetallePrograma"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCardCalendarioPrograma"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Ver mÃ¡s"
            android:backgroundTint="@color/accent"
            android:textSize="8sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>