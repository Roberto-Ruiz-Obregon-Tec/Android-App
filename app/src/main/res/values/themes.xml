<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RobertoRuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/nav_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nav_bar</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTheme">@style/CustomActionBar</item>

        <!-- Customize your theme here. -->
    </style>
    
    <style name="CustomActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/nav_bar</item>
        <item name="android:colorBackground">@color/nav_bar</item>
        <item name="android:color">@color/nav_bar</item>
        <item name="android:windowBackground">@color/nav_bar</item>
    </style>


    <style name="Theme.RobertoRuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
</resources>