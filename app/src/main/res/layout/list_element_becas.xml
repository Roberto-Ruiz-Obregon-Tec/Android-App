<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imagen_beca"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/curso2" />


        <TextView
            android:id="@+id/titulo_beca_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagen_beca"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Titulo"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/des_beca"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_beca_card"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:paddingTop="8dp"
            android:text="Descripcion"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/label_tipo_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_beca"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:text="Tipo"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tipo_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_beca"
            android:layout_alignBaseline="@id/label_tipo_beca"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:text="Tipos"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/label_fecha_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_tipo_beca"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:text="Fecha"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fecha_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_beca"
            android:layout_alignBaseline="@id/label_fecha_beca"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:text="Fecha"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/label_orga_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_fecha_beca"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:text="Organización"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/orga_beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_beca"
            android:layout_alignBaseline="@id/label_orga_beca"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:paddingTop="8dp"
            android:text="Organizacion"
            android:textSize="13sp" />




        <Button
            android:id="@+id/button_info1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_orga_beca"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@color/nav_bar"
            android:text="Ver más"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>
    <!-- button_info1-->
    <!-- locacion_curso1-->

</androidx.cardview.widget.CardView>